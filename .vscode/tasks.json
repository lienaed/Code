{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build SDL2 Program",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-v",
        "-g0",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I/opt/homebrew/include",
        "-I/opt/homebrew/include/SDL2",
        "-L/opt/homebrew/lib",
        "-lSDL2"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
