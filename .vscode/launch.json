{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试 SDL2 程序",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb",
      "preLaunchTask": "Build SDL2 Program",
      "setupCommands": [
        {
          "description": "为 LLDB 启用 pretty-printing",
          "text": "settings set target.inline-breakpoint-strategy always",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
